{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HairPreviewResultResponse",
  "type": "object",
  "required": ["status"],
  "properties": {
    "status": { "type": "string", "enum": ["queued", "processing", "succeeded", "failed", "canceled"] },
    "progress": {
      "type": "object",
      "properties": { "percent": { "type": "number", "minimum": 0, "maximum": 100 } },
      "additionalProperties": false
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url"],
        "properties": {
          "url": { "type": "string", "format": "uri" }
        },
        "additionalProperties": false
      }
    },
    "meta": {
      "type": "object",
      "properties": {
        "latency_ms": { "type": "integer", "minimum": 0 },
        "cost_estimate_usd": { "type": "number", "minimum": 0 },
        "model": { "type": "string" },
        "region": { "type": "string" }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
